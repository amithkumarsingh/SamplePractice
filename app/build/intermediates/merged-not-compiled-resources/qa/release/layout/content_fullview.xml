<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:transitionGroup="true"
        android:background="#EEEEEE"
        ScrollViewfocusableInTouchMode="true"
        android:id="@+id/content_scroll_view"
        android:layout_above="@+id/social_action_bar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/context_image"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:transitionName="profile"
                    android:src="@drawable/default_image_feed"
                    android:visibility="gone" />

                <include
                    android:id="@+id/audio_player_layout"
                    layout="@layout/activity_mediaplayer"
                    android:visibility="gone" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:transitionName="profile"
                    android:visibility="gone">

                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:id="@+id/community_attachment_layout_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#80231f20"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/attachment_icon_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/pdf_icon" />

                    <TextView
                        android:id="@+id/label_attachment_name_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:text="sample.pdf"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attachment_video_type"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:src="@drawable/ic_playvideo"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln1"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fullView_thumbnail_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln1"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <LinearLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="4">

                <TextView
                    android:id="@+id/article_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="03dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="03dp"
                    android:text="JOURNAL"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                  </LinearLayout>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="right"
                       android:paddingRight="16dp"
                       android:id="@+id/bookmark_contentFullview">

                    <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/bookmark_contentFullview_imageView"
                     android:src="@drawable/ic_bookmark_feed"
                     android:layout_marginTop="2dp"
                     />
                   </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/feed_title"
                    style="@style/ContentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Never damage in MS could be prevented with epilepsy drug"
                    android:textIsSelectable="true"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:id="@+id/feed_short_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="At present there is no treatment to prevent nerve damage in people with multiple sclerosis"
                    android:textIsSelectable="true"
                    android:layout_marginRight="16dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/feed_posted_date"
                        style="@style/MyTextViewBody3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="24-4-2016"
                        android:textIsSelectable="true"
                        android:textColor="#8A231f20"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/channelLogo_fullview"
                        android:layout_width="66dp"
                        android:layout_height="22dp"
                        android:paddingBottom="2dp"
                        android:src="@drawable/logo_healthday" />
                    <TextView
                        android:id="@+id/edited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Edited"
                        android:layout_toRightOf="@+id/tv_community_published_date"
                        android:layout_marginLeft="4dp"
                        android:visibility="visible"
                        android:textColor="#8A231f20"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp">

                </LinearLayout>

                <TextView
                    android:id="@+id/content_speciality"
                    style="@style/ContentSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Orthopedics, Neurology, Gastroenterology, Peadiatrics, General Medicine"
                    android:textIsSelectable="true"
                    android:visibility="gone"
                    android:layout_marginRight="16dp"/>
                <Button
                    android:id="@+id/btn_contact_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="16dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_border"
                    android:text="Contact Admin"
                    android:textColor="@color/white"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/feed_copyright_text"
                    style="@style/MyTextViewBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/copyright"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>

            <include
                android:id="@+id/content_fullview_comment_layout"
                layout="@layout/latest_comment_viewgroup"
                android:visibility="gone"></include>
            <include layout="@layout/recommendationslist_layout">

            </include>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/social_action_bar">

        <include layout="@layout/social_bar_layout"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/article_doceree_ad_layout">
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>