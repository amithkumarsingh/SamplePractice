<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_back_8" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLblHeader"
        style="@style/textview_consent_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ads by doceree"/>

    <Button
        android:id="@+id/btnReportAd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Report this Ad"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAppearance="@style/textview_consent_options"
        android:background="@android:color/white"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnWhyThisAd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHeight_percent="0.15"
        android:elevation="4dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnReportAd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/textview_consent_options"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivInfoIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_info_action"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@+id/tvWhyThisAd"
        app:layout_constraintStart_toEndOf="@+id/tvWhyThisAd"
        app:layout_constraintBottom_toBottomOf="@+id/tvWhyThisAd"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWhyThisAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Why this Ad?"
        android:elevation="4dp"
        android:textAppearance="@style/textview_consent_options"
        app:layout_constraintTop_toTopOf="@+id/btnWhyThisAd"
        app:layout_constraintStart_toStartOf="@+id/btnWhyThisAd"
        app:layout_constraintEnd_toEndOf="@+id/btnWhyThisAd"
        app:layout_constraintBottom_toBottomOf="@+id/btnWhyThisAd"/>

</androidx.constraintlayout.widget.ConstraintLayout>