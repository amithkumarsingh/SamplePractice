<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contact_support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/getin_touch"
      android:textSize="20sp"
      android:textColor="#DE231f20"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableLeft="@drawable/ic_email"
      android:layout_marginTop="14dp"
      android:id="@+id/contact_support_mail"
      android:paddingLeft="16dp"
      android:text="support@whitecoats.com"
      android:drawablePadding="16dp"
      android:textColor="@color/app_green"
      android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_phone"
        android:id="@+id/contact_support_phNum"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="16dp"
        android:text="91 7093993112"
        android:textColor="@color/app_green"
        android:textSize="14sp"/>

  <View
      android:id="@+id/about_me_border1"
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginTop="24dp"
      android:background="#1A231f20" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/request_call"
      android:textSize="20sp"
      android:textColor="#DE231f20"/>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:hintTextAppearance="@style/FloatLableColor"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your full name"
        android:id="@+id/full_name_edittext"
        android:textSize="14sp"
        android:textColor="#8A231f20"
        android:maxLength="100"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
      </com.google.android.material.textfield.TextInputLayout>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:text="Please enter your name"
         android:layout_marginLeft="32dp"
         style="@style/MyTextViewErrorStyle"
         android:id="@+id/full_name_error"/>


  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:hintTextAppearance="@style/FloatLableColor"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="8dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile number"
        android:id="@+id/mobile_num_edittext"
        android:textSize="14sp"
        android:textColor="#8A231f20"
        android:inputType="number"
        android:maxLength="20"/>
  </com.google.android.material.textfield.TextInputLayout>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Please enter vaild phone number"
      android:layout_marginLeft="32dp"
      style="@style/MyTextViewErrorStyle"
      android:id="@+id/phone_num_error"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Select preferred time "
      android:textSize="14sp"
      android:textColor="#8A231f20"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="16dp"/>

  <androidx.appcompat.widget.AppCompatSpinner
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/spinner_style"
      android:id="@+id/preferred_time"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:paddingRight="16dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@color/app_green"
        android:text="Call me back"
        android:textColor="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textAllCaps="false"
        android:id="@+id/call_me_action"/>




</LinearLayout>
