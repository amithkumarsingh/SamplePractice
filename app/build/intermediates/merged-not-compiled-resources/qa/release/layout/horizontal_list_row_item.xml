<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:dividerHeight="0.0px"
    android:elevation="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontal_content_layout"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_view_cardView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                app:cardCornerRadius="10dp">


                <FrameLayout
                    android:id="@+id/horizontal_feed_image_view_lay"
                    android:layout_width="50dp"
                    android:layout_height="50dp">


                    <ImageView
                        android:id="@+id/horizontal_feed_image_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_profilepic"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/attachment_type_pdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_attachment_type_pdf"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/attachment_type_video"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_playvideo"
                        android:visibility="gone" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/horizontal_feed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/image_view_cardView"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/actionbar_tittle_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/horizontal_feed_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontal_feed_title"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/image_view_cardView"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/reject_button"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_layout"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:orientation="horizontal">

                <com.vam.whitecoats.ui.customviews.RoundedImageView
                    android:id="@+id/doc_image_or_channel_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/default_profilepic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doc_name_or_channel_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/feed_image_view"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/doc_image"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/app_green"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/blank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp">

                        <TextView
                            android:id="@+id/post_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:drawablePadding="8dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#8A231f20"
                            android:textSize="8dp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/post_made_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/post_type"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#8A231f20"
                            android:textSize="8sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/num_of_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feed_image_view"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/doc_name"
                android:layout_weight=".75"
                android:gravity="right"
                android:paddingLeft="6dp"
                android:paddingRight="4dp"
                android:textColor="@color/reject_button"
                android:textSize="8sp" />
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>

