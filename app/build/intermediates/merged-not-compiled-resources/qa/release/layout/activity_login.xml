            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:id="@+id/settings_but"
            android:background="#99cdcdcd"
            android:textColor="@color/header_blue"
            android:onClick="onSettingsButtonClick"
            android:layout_marginTop="12dp"/>-->



    </LinearLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New on WhiteCoats?"
          android:layout_gravity="center_horizontal"
          android:textSize="16sp"
          android:textColor="#DE231f20"
          android:id="@+id/newUser_tv"
          android:visibility="gone"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="@string/register_now"
        android:textSize="18sp"
        android:id="@+id/register_now_but"
        android:background="@drawable/button_onselector"
        android:textColor="#FFFFFF"
        android:onClick="onRegisterButtonClick"
        android:visibility="gone"
        android:layout_marginTop="14dp"/>
</LinearLayout>

</ScrollView>
