<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"

    android:gravity="center"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1">

        <include layout="@layout/activity_card_dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_publications_layout1"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:weightSum="3"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:id="@+id/dash_layout_contatcs"
            android:layout_weight="1"
            >

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dash_text_cont_num"
                android:textSize="24dp"
                android:textColor= "#8A231f20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connects"
                android:id="@+id/textView7"
                style="@style/MyTextViewBody2"
                android:textColor="#8A231F20"/>
        </LinearLayout>
        <View
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/separator"
            android:background="#1A231f20"
            android:layout_width = "1px"
            android:layout_height="fill_parent"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:id="@+id/dash_layout_coserooms"
            android:layout_weight="1"
            >

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dash_text_coserooms_num"
                android:textSize="24dp"
                android:textColor= "#8A231f20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caserooms"
                android:id="@+id/textView9"
                style="@style/MyTextViewBody2"
                android:textColor="#8A231F20"/>
        </LinearLayout>
        <View
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/separator1"
            android:background="#1A231f20"
            android:layout_width = "1px"
            android:layout_height="fill_parent"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:id="@+id/dash_layout_group"
            android:layout_weight="1"
            >

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/dash_text_cont_groups"
                android:textSize="24dp"
                android:textColor= "#8A231f20"/>

            <TextView
                android:layout_height="wrap_content"
                android:text="Groups"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                style="@style/MyTextViewBody2"
                android:textColor="#8A231F20"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>