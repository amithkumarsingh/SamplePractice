<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/block"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/labelLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/ContentMediumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/main_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/FloatLableColor">

            <EditText
                android:id="@+id/oldPasswordEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@$_"
                android:hint="Enter old password"
                android:maxLength="30"
                android:paddingLeft="6dp"
                android:maxLines="1"
                android:textSize="14sp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/oldPassword_transformation_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="right|center_vertical"
                android:background="@android:color/transparent"
                android:textSize="10sp"
                android:text="Show"
                android:textColor="@color/app_green"
                android:visibility="gone"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:paddingBottom="8dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/oldPasswordErrorTxt"
            style="@style/MyTextViewErrorStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="6dp"
            android:text="Please enter old password" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:hintTextAppearance="@style/FloatLableColor">

            <EditText
                android:id="@+id/newPasswordEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@$_"
                android:hint="Enter new password"
                android:maxLength="30"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/newPassword_transformation_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="right|center_vertical"
                android:background="@android:color/transparent"
                android:textSize="10sp"
                android:text="Show"
                android:textColor="@color/app_green"
                android:visibility="gone"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/newPasswordErrorTxt"
            style="@style/MyTextViewErrorStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="6dp"
            android:text="Please enter new password" />

        <TextView
            android:id="@+id/dash_text_details"
            style="@style/MyTextViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="6dp"
            android:text="@string/str_passwordmimimum" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">


        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_onselector"
            android:onClick="onChangePasswordButtonClick"
            android:text="@string/save_new_password"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>
