<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.vam.whitecoats.ui.customviews.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile_pic_img"
        android:src="@drawable/default_profilepic"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/title_layout"
        >
        <TextView
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_edit"
            android:text=""
            style="@style/ActionBarTextViewTitle"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            />

          <LinearLayout
              android:layout_marginLeft="16dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/actionbar_white"
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_txt"
                style="@style/ActionBarTextViewTitle"
                android:textSize="12dp"
                android:visibility="gone"
                />
        <TextView
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typestatusTextView"
            android:text="typing..."
            android:textColor="@color/actionbar_white"
            android:textSize="12dp"
            android:visibility="gone"
            />
          </LinearLayout>
    </LinearLayout>

</LinearLayout>
