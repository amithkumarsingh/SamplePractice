<?xml version="1.0" encoding="utf-8"?>
        
    
                 
                            
                                                                    
                 
                          
                                                                       
           
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.activities.DrugSubClassActivity"
        android:layout_width="match_parent"
        android:id="@+id/drug_sub_class_refresh"
        android:layout_height="match_parent" android:tag="layout/activity_drug_sub_class_0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_content_layout"
            android:background="@color/white" android:tag="binding_1">
            <include android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/search_layout"
                android:id="@+id/drug_search_layout">
            </include>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/drug_search_layout"
                android:id="@+id/doceree_ad_layout">
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drug_sub_class_recycler"
                android:layout_below="@+id/doceree_ad_layout"
                android:tag="binding_2" 
                                                                 
                android:overScrollMode="never"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data_available"
                android:layout_centerInParent="true"
                android:tag="binding_3"                              
                android:gravity="center_horizontal"/>
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallClipRotatePulseIndicator"
                android:id="@+id/drug_sub_class_aviInExplore"
                app:indicatorColor="@color/app_green"
                android:tag="binding_4"                            
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

         