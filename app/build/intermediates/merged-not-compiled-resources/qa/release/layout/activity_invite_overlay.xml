<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/app_green"
    android:gravity="center"
    android:weightSum="2">

          <LinearLayout
              android:id="@+id/layout_reject"
              android:layout_weight="1"
              android:gravity="center"
              android:background="@drawable/textview_onselector"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/textview_onselector"
                android:id="@+id/visit_profile_post_count"
                android:text="245 \n posts"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp" />
          </LinearLayout>
            <View
                android:layout_weight="0"
                android:id="@+id/vertical_seperator"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:background="@color/dark_gray"
                android:layout_width = "1px"
                android:layout_height="44dp" />

    <LinearLayout
        android:id="@+id/layout_accept"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/textview_onselector"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:id="@+id/visit_prof_connects"
                android:text="20 \n connects"
                android:background="@drawable/textview_onselector"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"/>

             </LinearLayout>
        </LinearLayout>

