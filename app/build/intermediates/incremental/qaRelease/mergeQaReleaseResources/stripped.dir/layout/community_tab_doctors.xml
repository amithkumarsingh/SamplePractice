        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drug_class_refresh" android:tag="layout/community_tab_doctors_0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" android:tag="binding_1">
