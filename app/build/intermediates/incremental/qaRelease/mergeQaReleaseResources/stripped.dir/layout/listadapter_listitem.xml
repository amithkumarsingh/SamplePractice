<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <com.vam.whitecoats.utils.SquareImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/overlayLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center">

            <TextView
                android:id="@+id/pdfFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editImageView"
                android:maxLines="2"
                android:padding="4dp"
                android:text="  "
                android:textColor="#99FFFFFF" />

            <Button
                android:id="@+id/editImageView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="#99FFFFFF"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="-10dp"
                android:paddingLeft="2dp"
                android:text="@string/actionbar_edit"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/app_green"
                android:visibility="visible" />

            <Button
                android:id="@+id/deleteImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingRight="5dp"
                android:visibility="visible" />

            <!--            <Button-->
            <!--                android:id="@+id/deleteImageView"-->
            <!--                android:layout_width="25dp"-->
            <!--                android:layout_height="25dp"-->
            <!--                android:paddingRight="5dp"-->
            <!--                android:gravity="center"-->
            <!--                android:background="#66000000"-->
            <!--                android:layout_alignParentTop="true"-->
            <!--                android:visibility="gone"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:drawableRight="@drawable/ic_close_white"/>-->

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/deleteImageNew"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_bg"
        android:backgroundTint="@color/red">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:background="@drawable/ic_delete_new"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:paddingRight="5dp" />
    </RelativeLayout>

</RelativeLayout>
