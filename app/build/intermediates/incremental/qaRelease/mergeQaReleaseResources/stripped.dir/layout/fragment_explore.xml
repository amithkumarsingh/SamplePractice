<?xml version="1.0" encoding="utf-8"?>
        
    
                 
                            
                                                                  

                 
                          
                                                                  
           
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/explore_swipe_refresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:tag="layout/fragment_explore_0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            tools:context=".ui.fragments.ExploreFragment"
            android:background="#F9FFFE">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/categoty_grid"
                android:paddingStart="8dp"
                android:tag="binding_1" 
                                                                 
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data_available"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:tag="binding_2"                              
                android:gravity="center_horizontal">



            </TextView>
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallClipRotatePulseIndicator"
                android:id="@+id/aviInExplore"
                app:indicatorColor="@color/app_green"
                android:tag="binding_3"                            
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"/>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

         