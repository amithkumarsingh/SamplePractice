<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/re_notify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/block"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <FrameLayout
                android:id="@+id/notification_img_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/centered_progressbar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:indeterminate="false"
                    android:max="100"
                    android:visibility="gone" />

                <com.vam.whitecoats.ui.customviews.RoundedImageView
                    android:id="@+id/notification_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/default_profilepic" />
            </FrameLayout>

            <TextView
                android:id="@+id/invitation_time"
                style="@style/MyTextViewBody3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="1hr"
                android:visibility="visible"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/notify_item_name_txt"
                style="@style/MyTextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/invitation_time"
                android:layout_toRightOf="@+id/notification_img_frame"
                android:singleLine="true"
                android:text="Dr.Rameshwara Rao"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notify_item_splty_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notify_item_name_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/notification_img_frame"
                android:singleLine="true"
                android:text="Cardiologist" />

            <TextView
                android:id="@+id/accepted_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notify_item_name_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/notification_img_frame"
                android:singleLine="true"
                android:text="Accepted your friend request"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/inner_lout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notify_item_splty_txt"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >

                <TextView
                android:id="@+id/message_text"
                style="@style/MyTextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="Dr. Usernoti Test has invited you to connect on WhiteCoats"
                android:layout_marginTop="12dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/reject_accept_lay"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/reject_accept_lay"
                    android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/notify_reject_ig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cross_reject" />

                <ImageView
                    android:id="@+id/notify_accept_ig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_check_accept"
                    android:layout_toRightOf="@+id/notify_reject_ig"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
