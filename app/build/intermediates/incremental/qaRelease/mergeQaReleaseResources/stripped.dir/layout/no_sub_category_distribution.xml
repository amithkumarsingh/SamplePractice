<?xml version="1.0" encoding="utf-8"?>
        
    
                 
                            
                                                                         

                 
                          
                                                                                    
           
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/explore_swipe_refresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:tag="layout/no_sub_category_distribution_0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activities.SubCategoriesListActivity"
            android:background="#E1E1E1">

          <TextView
              android:layout_width="296dp"
              android:layout_height="25dp"
              android:background="@drawable/search_categories_distribution_bg"
              android:layout_centerHorizontal="true"
              android:id="@+id/search_text_view"
              android:drawableLeft="@drawable/ic_search_grey"
              android:drawablePadding="8dp"
              android:paddingLeft="8dp"
              android:hint="Search COVID-19"
              android:gravity="center_vertical"
              android:layout_marginBottom="8dp"
              android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_subCategories_list"
                android:tag="binding_1" 
                android:layout_below="@+id/search_text_view"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="@string/no_data_available"
                android:tag="binding_2"                              
                android:gravity="center_horizontal"
                android:visibility="gone">
            </TextView>
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallClipRotatePulseIndicator"
                android:id="@+id/aviInExplore"
                app:indicatorColor="@color/app_green"
                android:tag="binding_3"                            
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

         