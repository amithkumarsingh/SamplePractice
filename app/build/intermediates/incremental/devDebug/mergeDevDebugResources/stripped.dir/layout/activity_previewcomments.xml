<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/preview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/add_user"
        android:scaleType="fitXY"
        android:visibility="visible"/>
    <RelativeLayout
        android:id="@+id/comment_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">
        <ImageButton
            android:id="@+id/preview_cameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cameraimagebutton"
            android:src="@drawable/ic_camera" />
        <EditText
            android:id="@+id/preview_EditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/comment_cameraBtn"
            android:layout_toLeftOf="@+id/comment_sendBtn"
            android:background="@drawable/preview_edittext"
            android:hint="@string/typeComment"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="2" />
       <!-- <EditText
            android:id="@+id/preview_EditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:autoLink="all"
            android:background="@drawable/border_gray_message_edit_text"
            android:gravity="center_vertical"
            android:hint="Type Message"
            android:layout_weight="1"
            style="@style/MyTextViewBody1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:inputType="textCapSentences|textMultiLine"
            />-->
        <ImageButton
            android:id="@+id/preview_sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_send_disabled" />

    </RelativeLayout>

</RelativeLayout>
