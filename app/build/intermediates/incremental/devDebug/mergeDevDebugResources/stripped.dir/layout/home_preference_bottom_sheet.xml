<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/skip_done_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ececec"
        >

        <TextView
            android:id="@+id/association_selection_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:text="Skip"
            android:textColor="@color/app_green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/association_selection_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:text="@string/str_done"
            android:textColor="@color/app_green"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/set_default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skip_done_lay"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:text="Set Your Default Homepage"
        android:textColor="@color/app_green"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_default_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:text="You can always change your default preference anytime from the home page setting "
        android:textSize="14sp" />

    <com.vam.whitecoats.utils.BottomSheetListView
        android:id="@+id/associationsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hint_text"
        android:layout_marginTop="8dp"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/darker_gray"
        android:visibility="visible">

    </com.vam.whitecoats.utils.BottomSheetListView>


</RelativeLayout>
