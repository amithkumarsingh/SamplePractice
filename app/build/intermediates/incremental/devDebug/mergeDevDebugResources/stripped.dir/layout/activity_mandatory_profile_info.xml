<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_registartion_screen_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00fffc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#00fffc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#1a231f20" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <FrameLayout
                android:id="@+id/profilePic_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <com.vam.whitecoats.ui.customviews.RoundedImageView
                    android:id="@+id/prof_pic_img"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/default_profilepic" />

                <ImageView
                    android:id="@+id/prof_pic_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_camera_whitebg" />
            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/speciality_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilePic_lay"
                android:layout_marginTop="60dp"
                app:hintTextAppearance="@style/FloatLableColor">

                <EditText
                    android:id="@+id/specialityTxtVw"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:focusable="false"
                    android:hint="@string/specialty"
                    android:imeOptions="actionNext"
                    android:maxLength="50" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/speciality_error_text"
                style="@style/MyTextViewErrorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speciality_lay"
                android:layout_marginLeft="6dp"
                android:text="@string/dlg_not_speciality_field_entered" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/subSpeciality_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speciality_error_text"
                android:layout_marginTop="12dp"
                app:hintTextAppearance="@style/FloatLableColor">

                <EditText
                    android:id="@+id/subSpecialityEditTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ&amp;, "
                    android:hint="@string/sub_speciality"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="120"
                    android:paddingLeft="6dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/workplace_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subSpeciality_lay"
                android:layout_marginTop="12dp"
                app:hintTextAppearance="@style/FloatLableColor">




                    <AutoCompleteTextView
                        android:id="@+id/cities_autocomplete_view"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="@string/workplace"
                        android:maxLength="240"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:textSize="15sp"
                        android:textColor="#99000EA2"
                        android:maxLines="1"
                        android:ellipsize="end"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/workplace_error_text"
                style="@style/MyTextViewErrorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workplace_lay"
                android:layout_marginLeft="6dp"
                android:text="@string/dlg_not_workplace_field_entered" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workplace_error_text"
                android:layout_marginTop="12dp"
                app:hintTextAppearance="@style/FloatLableColor">


                    <AutoCompleteTextView
                        android:id="@+id/city_edit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="@string/city"
                        android:maxLength="80"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:textSize="15sp"
                        android:textColor="#99000EA2" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/city_error_text"
                style="@style/MyTextViewErrorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_lay"
                android:layout_marginLeft="6dp"
                android:text="@string/dlg_not_city_field_entered" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/experience_autocomplete_view_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_error_text"
                android:layout_marginTop="12dp"
                app:hintTextAppearance="@style/FloatLableColor">

                <AutoCompleteTextView
                    android:id="@+id/experience_autocomplete_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Overall Experience"
                    android:inputType="number"
                    android:textSize="15sp" />


            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/experience_error_text"
                style="@style/MyTextViewErrorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/experience_autocomplete_view_lay"
                android:layout_marginLeft="6dp"
                android:text="Please select the overall experience" />


            <Button
                android:id="@+id/profile_submit_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/experience_error_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_onselector"
                android:paddingLeft="52dp"
                android:paddingRight="52dp"
                android:text="Submit"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>