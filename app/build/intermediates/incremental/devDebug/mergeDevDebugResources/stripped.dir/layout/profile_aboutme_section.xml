<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/about_me_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="0.9"
                android:text="@string/about_contactdet"
                android:textAllCaps="true" />

            <RelativeLayout
                android:id="@+id/aboutMeEditIcon_lay"
                android:layout_width="44dp"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/aboutMeEditIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_edit" />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/user_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_email_text"
                style="@style/MyTextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.30"
                android:background="@drawable/bg_capsule"
                android:drawableLeft="@drawable/ic_user_email"
                android:drawableRight="@drawable/ic_verified"
                android:drawablePadding="5dp"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:paddingLeft="1dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:text="" />

            <TextView
                android:id="@+id/verify_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.70"
                android:maxLines="1"
                android:text="Verify email"
                android:textColor="@color/app_green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_contact_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_contact_text"
                style="@style/MyTextViewBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.30"
                android:background="@drawable/bg_capsule"
                android:drawableLeft="@drawable/ic_user_phone"
                android:drawableRight="@drawable/ic_verified"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="1dp"
                android:paddingRight="15dp"
                android:text="" />

            <TextView
                android:id="@+id/verify_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.70"
                android:maxLines="1"
                android:text="Verify phone"
                android:textColor="@color/app_green" />
        </LinearLayout>

        <TextView
            android:id="@+id/connect_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="@string/connect_to_text"
            android:textColor="@color/app_green"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/doc_profile_url"
            style="@style/MyTextViewBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:drawableLeft="@drawable/logo_grey"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/app_green"
            android:visibility="visible" />

        <View
            android:id="@+id/profileUrlSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A231f20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/website_text"
            style="@style/MyTextViewBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_website"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="www.google.com "
            android:textColor="@color/app_green"
            android:visibility="visible" />

        <View
            android:id="@+id/websiteSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A231f20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/blog_text"
            style="@style/MyTextViewBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_blog"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="www.asda.com "
            android:textColor="@color/app_green"
            android:visibility="visible" />

        <View
            android:id="@+id/blogSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A231f20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/facebook_text"
            style="@style/MyTextViewBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_facebook"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="www.facebook.com "
            android:textColor="@color/app_green"
            android:visibility="visible" />
        <View
            android:id="@+id/fbSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A231f20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/linkedIn_text"
            style="@style/MyTextViewBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_linkedin"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="www.linkedIn.com "
            android:textColor="@color/app_green"
            android:visibility="visible" />
        <View
            android:id="@+id/linkedInSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A231f20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/twitter_text"
            style="@style/MyTextViewBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_twitter"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="www.twitter.com "
            android:textColor="@color/app_green"
            android:visibility="visible" />
        <View
            android:id="@+id/twitterSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A231f20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/insta_text"
            style="@style/MyTextViewBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_insta"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="www.instagram.com "
            android:textColor="@color/app_green"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>