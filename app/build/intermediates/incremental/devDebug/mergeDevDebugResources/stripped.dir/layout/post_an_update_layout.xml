<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="#ccffffff"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.vam.whitecoats.ui.customviews.RoundedImageView
                android:id="@+id/profile_pic_timeline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:src="@drawable/default_profilepic" />
            <ImageView
                android:id="@+id/add_pic_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:paddingRight="5dp"
                android:src="@drawable/ic_edit" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/postUpdateLabel_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postUpdateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Hi Dr."
            android:textColor="@color/app_green"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/dashboard_border"
            android:drawableRight="@drawable/ic_create_post_pen"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Share an update or a case..."
            android:textColor="#8A231f20"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>