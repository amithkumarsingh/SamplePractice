<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/block"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/grp_notify_time"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp"
            android:text="1hr"
            android:textSize="12sp"/>

        <com.vam.whitecoats.ui.customviews.RoundedImageView
            android:id="@+id/group_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_grouppic" />

        <TextView
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/grp_notify_time"
            android:layout_toRightOf="@+id/group_pic"
            android:gravity="center|left"
            android:text="Orthos in Hyd"
            android:textColor="#DE000000"
            android:textSize="18sp"
            android:singleLine="true"
            />


        <ImageView
            android:id="@+id/notify_group_reject_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupName"
            android:layout_toLeftOf="@+id/notify_group_accept_ig"
            android:layout_toStartOf="@+id/notify_group_accept_ig"
            android:src="@drawable/ic_cross_reject" />

        <ImageView
            android:id="@+id/notify_group_accept_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/groupName"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_check_accept" />

        <TextView
            android:id="@+id/CreatedBy"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notify_group_reject_ig"
            android:text="@string/str_created_by"
            android:visibility="gone"/>

        <com.vam.whitecoats.ui.customviews.RoundedImageView
            android:id="@+id/adminProfilePic"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/CreatedBy"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/default_profilepic" />

        <TextView
            android:id="@+id/adiminName"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CreatedBy"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/adminProfilePic"
            android:text="Dr.Rameshwara Rao"
             android:textSize="12sp"/>

        <TextView
            android:id="@+id/adminspeciality"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adiminName"
            android:layout_marginLeft="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/adminProfilePic"
            android:text="Cardiologist"
            android:textSize="12sp"/>

    </RelativeLayout>
</LinearLayout>

