    <RelativeLayout
        android:id="@+id/edt_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:paddingBottom="2dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="2dp">


        <EditText
            android:id="@+id/search_edtbox"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@string/str_search_edt"
            android:maxLines="1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="13dp">

        <com.vam.whitecoats.tools.LoadMoreListView
            android:id="@+id/contacts_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/email_include_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="13dp">

        <Button
            android:id="@+id/ph_contacts_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:onClick="onPhoneContactsClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/str_phcontacts_btn"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <Button
            android:id="@+id/email_contacts_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="12dp"
            android:background="@color/white"
            android:onClick="onEmailContactsClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/str_emailcontacts_btn"
            android:textColor="@color/blue"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
