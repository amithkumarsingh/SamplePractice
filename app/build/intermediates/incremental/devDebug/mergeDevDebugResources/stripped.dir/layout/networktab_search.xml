<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:textColor="#8A231F20"
            android:text="Search for..." />

        <LinearLayout
            android:id="@+id/radio_group_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/doctor_search_selection_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_search_doctor"
                android:gravity="center"
                android:background="@null"
                android:text="Doctors"
                android:textSize="14dp"
                android:textColor="#8A231F20" />

            <Button
                android:id="@+id/feed_search_selection_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_search_feeds"
                android:gravity="center"
                android:background="@null"
                android:text="Feeds"
                android:textSize="14dp"
                android:textColor="#8A231F20" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
