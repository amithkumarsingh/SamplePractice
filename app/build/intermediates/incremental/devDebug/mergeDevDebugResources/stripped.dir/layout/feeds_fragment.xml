<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ececec">

    <include layout="@layout/post_an_update_layout"
        android:id="@+id/postUpdateLayout_Timeline"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp">

        <!-- <com.vam.whitecoats.ui.customviews.CustomRecycleView
             android:id="@+id/recycler_view"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:scrollbars="vertical"
             android:layout_marginLeft="0dp"
            />-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

        <ImageButton
            android:id="@+id/makepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|bottom"
            android:background="@color/transparent"
            android:src="@drawable/btn_create_post"
            android:visibility="gone"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="9dp"/>

        <TextView
            android:id="@+id/noFeeds_textView"
            style="@style/MyTextViewBody2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="No feeds available as per the selected preferences.\n Please edit your preferences."
            android:textSize="16sp"
            android:visibility="gone" />

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallClipRotatePulseIndicator"
            android:id="@+id/aviInTimeline"
            app:indicatorColor="@color/app_green"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
