<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ffffff"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hintTextAppearance="@style/FloatLableColor">

                <AutoCompleteTextView
                    android:id="@+id/degree_edit"
                    style="@style/App_AutoCompleteTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.-(), &amp;/"
                    android:hint="@string/degree"
                    android:imeOptions="actionNext"
                    android:maxLength="100"
                    android:paddingLeft="6dp"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--
                    style="@style/App_AutoCompleteTextViewStyle"
            -->

            <TextView
                android:id="@+id/degree_error_text"
                style="@style/MyTextViewErrorStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:text="@string/dlg_degree_error" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/passing_year_edit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:hint="@string/passing_year"
                        android:inputType="number"
                        android:maxLength="4"
                        android:paddingLeft="6dp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/currently_pursuing_checkbox"
                    style="@style/MyTextViewBody2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/str_currently_pursuing" />


            </LinearLayout>

            <TextView
                android:id="@+id/year_error_text"
                style="@style/MyTextViewErrorStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:text="@string/dlg_year_error" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:hintTextAppearance="@style/FloatLableColor">

                <AutoCompleteTextView
                    android:id="@+id/university_autoedit"
                    style="@style/App_AutoCompleteTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="6dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ, ."
                    android:hint="@string/university"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="100"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:hintTextAppearance="@style/FloatLableColor">

                <AutoCompleteTextView
                    android:id="@+id/college_autoedit"
                    style="@style/App_AutoCompleteTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,&amp; "
                    android:hint="@string/college"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:maxLength="100"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_another_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_onselector"
                android:text="@string/str_add_another_workplace"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/delete_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/delete_ig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/delete_ig"
                    android:text="@string/str_remove" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>