<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp_basicprofile"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="24dp"
                            app:ccp_defaultNameCode="IN" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/ccp_basicprofile">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/contact_error"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:hintTextAppearance="@style/FloatLableColor">

                                <EditText
                                    android:id="@+id/contact_no_edit"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:digits="1234567890"
                                    android:enabled="true"
                                    android:focusable="true"
                                    android:hint="@string/contactno"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:text="" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/contact_no_text"
                                style="@style/MyTextViewErrorStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/contact_error"
                                android:layout_gravity="left"
                                android:paddingLeft="6dp"
                                android:text="@string/str_contactno_error" />
                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <Spinner
                    android:id="@+id/num_visibility_spinner"
                    style="@style/spinner_style"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/contactNumberVisibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Show My Contact Number to My Connects" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_add_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/email_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:enabled="true"
                        android:focusable="true"
                        android:hint="@string/emailid"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/email_error"
                    style="@style/MyTextViewErrorStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_add_error"
                    android:layout_gravity="left"
                    android:paddingLeft="6dp"
                    android:text="@string/str_contactno_error" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/emailIDVisibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Show My Email ID to My Connects"
                    />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_url_layout">

                <ImageView
                    android:id="@+id/whiteCoats_ig"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/logo_grey"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/whiteCoats_ig"
                    android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="www.whitecoats.com/"
                    android:id="@+id/prefix_url_tv"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="0.4"/>
                <EditText
                    android:id="@+id/personalized_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="140"
                    android:layout_marginLeft="-6dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_-"
                    android:layout_weight="0.6"/>
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/web_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/website_ig"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_website" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/website_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/website_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/your_website"
                        android:inputType="textUri"
                        android:maxLength="100"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/blog_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/blog_page_ig"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_blog" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/blogpage_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/blog_page_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/blog_page"
                        android:inputType="textUri"
                        android:maxLength="100"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/fb_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/facebook_page_ig"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_facebook" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/facebookpage_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/facebookpage_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/facebook_page"
                        android:inputType="textUri"
                        android:maxLength="100"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/linkedIn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/linkedIn_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_linkedin" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/linkedIn_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/linkedIn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/linkedIn_page"
                        android:inputType="textUri"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/twitter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/twitter_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_twitter" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/twitter_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/twitter_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/twitter_page"
                        android:inputType="textUri"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/insta_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/insta_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_insta" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/insta_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:hintTextAppearance="@style/FloatLableColor">

                    <EditText
                        android:id="@+id/insta_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/insta_page"
                        android:inputType="textUri"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
