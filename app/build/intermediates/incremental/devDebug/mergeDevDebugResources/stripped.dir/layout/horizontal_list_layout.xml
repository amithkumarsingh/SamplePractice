<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:id="@+id/horizontal_list">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_category_name"
        android:text="@string/suggested_feeds_text"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/app_green"
        android:textSize="14sp"
        android:layout_marginTop="0dp">

    </TextView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="16dp"
    android:paddingTop="0dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:id="@+id/more_into_text_lay"
    android:visibility="visible">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_into_text"
        android:text="@string/see_more_text"
        android:textSize="12sp"
        >

    </TextView>

    <ImageView
        android:layout_toRightOf="@+id/more_into_text"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_forward_arrow"
        android:paddingLeft="8dp"
       />
</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/horizontal_category_name"
        android:id="@+id/horizontal_category_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_marginTop="4dp"/>

</RelativeLayout>