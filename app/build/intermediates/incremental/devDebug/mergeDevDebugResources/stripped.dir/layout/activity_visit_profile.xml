<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="50dp"
            app:expandedTitleMarginStart="35dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/visit_prof_pic_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1.0" />

            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

        <include
            android:id="@+id/invite_layout"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_invite_overlay"/>
    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/visit_prof_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dr Srikant Reddy"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/visit_prof_speciality"
                    style="@style/MyTextViewBody3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Pediatric Vascular Surgeon"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/visit_prof_sub_speciality"
                    style="@style/MyTextViewBody3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Club foot, brokenbones, infections of bones and joints " />

                <TextView
                    android:id="@+id/visit_prof_workplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Workplace" />

                <Button
                    android:id="@+id/others_invite_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_onselector"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Add Connect"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/others_message_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_onselector"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Send Message"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/txt_awaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Connect Request Sent"
                    android:textColor="@color/gray"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/reject_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="@color/action_selector_focused"
                        android:drawableLeft="@drawable/ic_close_white"
                        android:drawablePadding="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Reject"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/accept_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/button_onselector"
                        android:drawableLeft="@drawable/ic_check_white"
                        android:drawablePadding="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/str_inv_accept"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/about_me_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/block"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/about_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/str_about_visitor" />

                <TextView
                    android:id="@+id/visitor_about_expandableTextView"
                    style="@style/MyTextViewBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_user"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="" />

            <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_below="@+id/visitor_about_expandableTextView"
                android:id="@+id/contact_deatils_lay_visit"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/user_email_text_visit"
                    style="@style/MyTextViewBody1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_capsule"
                    android:drawableLeft="@drawable/ic_user_email"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="12dfgtrrloij@test.email.com"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="5dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/user_contact_text_visit"
                    style="@style/MyTextViewBody1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0.30"
                    android:background="@drawable/bg_capsule"
                    android:drawableLeft="@drawable/ic_user_phone"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:text="+91-9015179889"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_to_text"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/app_green"
                    android:textSize="18sp"
                    android:id="@+id/connect_to_text"
                    android:visibility="gone"/>


            </LinearLayout>

                <!-- <View
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginTop="10dp"
                     android:layout_below="@+id/visitor_about_expandableTextView"
                     android:layout_width="fill_parent"
                     android:layout_height="1px"
                     android:background="@color/gray_border_color"
                     android:id="@+id/about_me_border0" />-->

                <TextView
                    android:id="@+id/v_website_text"
                    style="@style/MyTextViewBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_deatils_lay_visit"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/ic_website"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:textColor="@color/app_green" />

                <View
                    android:id="@+id/about_me_border1"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/v_website_text"
                    android:background="#1A231f20" />

                <TextView
                    android:id="@+id/v_blog_text"
                    style="@style/MyTextViewBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_me_border1"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_blog"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:textColor="@color/app_green" />

                <View
                    android:id="@+id/about_me_border2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/v_blog_text"
                    android:background="#1A231f20" />

                <TextView
                    android:id="@+id/v_facebook_text"
                    style="@style/MyTextViewBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_me_border2"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:drawablePadding="15dp"
                    android:text=""
                    android:textColor="@color/app_green" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/professional_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/block"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/professional_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/professional"
                    android:textAllCaps="true" />

                <com.vam.whitecoats.ui.customviews.NonScrollListView
                    android:id="@+id/visit_others_professional_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/professional_heading"
                    android:layout_marginTop="2dp"
                    android:headerDividersEnabled="false"
                    android:listSelector="@android:drawable/screen_background_light_transparent" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/academics_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/block"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/academic_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/academic"
                    android:textAllCaps="true" />

                <com.vam.whitecoats.ui.customviews.NonScrollListView
                    android:id="@+id/visit_others_academic_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/academic_heading"
                    android:layout_marginTop="2dp"
                    android:headerDividersEnabled="false"
                    android:listSelector="@android:drawable/screen_background_light_transparent" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/publications_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/block"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/publications_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/publication"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/print_publications_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/print"
                    android:textSize="12sp" />

                <com.vam.whitecoats.ui.customviews.NonScrollListView
                    android:id="@+id/visit_others_print_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:headerDividersEnabled="false"
                    android:listSelector="@android:drawable/screen_background_light_transparent" />

                <TextView
                    android:id="@+id/online_publications_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/online"
                    android:textSize="12sp" />

                <com.vam.whitecoats.ui.customviews.NonScrollListView
                    android:id="@+id/visit_others_online_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:headerDividersEnabled="false"
                    android:listSelector="@android:drawable/screen_background_light_transparent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/membership_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/block"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/membership_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/membership"
                    android:textAllCaps="true" />

                <com.vam.whitecoats.ui.customviews.NonScrollListView
                    android:id="@+id/visit_others_membership_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/membership_heading"
                    android:layout_marginTop="2dp"
                    android:headerDividersEnabled="false"
                    android:listSelector="@android:drawable/screen_background_light_transparent" />
            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

