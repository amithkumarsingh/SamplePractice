<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="position"
            type="java.lang.Integer" />
        <variable
            name="viewModel"
            type="com.vam.whitecoats.viewmodel.NotificationItemViewModel"/>
        <variable name="itemClickListener"
            type="com.vam.whitecoats.ui.interfaces.NotificationItemClickListener"/>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    app:notificationItemBackground="@{viewModel.notificationInfo.isNotificationRead()}"
    android:onClick="@{() -> itemClickListener.onItemClick(viewModel.notificationInfo,position)}">


 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/notification_article_unread_icon"
     android:layout_alignParentLeft="true"
     app:notificationImage="@{viewModel.notificationInfo}"
     android:id="@+id/image_view"/>


 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:maxLines="2"
     android:ellipsize="end"
     android:layout_toRightOf="@+id/image_view"
     android:layout_toLeftOf="@+id/time"
     android:layout_marginLeft="16dp"
     app:text="@{viewModel.title}"
     android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h"
        android:maxLines="1"
        android:ellipsize="end"
        app:text="@{viewModel.timeDifference}"
        android:layout_alignParentRight="true"/>



</RelativeLayout>
</layout>
