<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_notification_on_rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/notification_on_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_notification_on_bell">

    </ImageView>

    <ImageView
        android:id="@+id/notification_on_close_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/close_button">

    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/notification_on_close_iv1"
        android:layout_toRightOf="@+id/notification_on_iv"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/notification_on_header_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_on_header_text"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/notification_on_desc_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/notification_on_desc_text">

        </TextView>

        <TextView
            android:id="@+id/notification_on_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:text="TURN ON NOTIFICATIONS"
            android:textAllCaps="true"
            android:textColor="@color/app_green"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>


</RelativeLayout>

