<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/webinar_time_date_inner_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_webinar_date_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/webinar_date_time_text"
            android:textColor="#231f20"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:padding="4dp">


            <TextView
                android:id="@+id/date_webinar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/webinar_calendar_icon"
                android:drawablePadding="6dp"
                android:text="15th july 2020"
                android:textColor="#231f20"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/webinar_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/date_webinar"
                android:drawableLeft="@drawable/webinar_clock"
                android:drawablePadding="6dp"
                android:text="6.00pm - 7.30pm"
                android:textColor="#231f20"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/registered_join_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/register_now"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/webinar_register_bg"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Register Now"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/already_registered_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/webinar_registered"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:indeterminate="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/already_registered_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registered_join_lay"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="You are registered"
                android:textColor="#231f20"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/ended_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="@string/recorded_video_text_webinar"
        android:textColor="#231f20"
        android:textSize="14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/view_recording_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/webinar_register_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="View Recording"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />


    <Button
        android:id="@+id/join_now"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/webinar_join_button_border"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Join Now"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/simplePB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:visibility="gone">

    </ProgressBar>

    <TextView
        android:id="@+id/tv_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:gravity="left"
        android:text="Organizer"
        android:textColor="#231f20"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>
