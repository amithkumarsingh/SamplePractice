<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/me_section_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffbd7"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="16dp"
            android:src="@drawable/ic_alert" />

        <TextView
            android:id="@+id/verify_now_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/verfication_mca_text"
            android:textColor="#DE231F20"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/add_publications_layout1"
            layout="@layout/activity_card_dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/dash_layout_contatcs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/dash_text_cont_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#8A231f20"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView7"
                style="@style/MyTextViewBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connects"
                android:textColor="#8A231F20" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#1A231f20" />

        <LinearLayout
            android:id="@+id/dash_layout_coserooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:clickable="true"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/dash_text_coserooms_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/app_green"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView9"
                style="@style/MyTextViewBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caserooms"
                android:textColor="@color/app_green" />
        </LinearLayout>

        <View
            android:id="@+id/separator1"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#1A231f20" />

        <LinearLayout
            android:id="@+id/dash_layout_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/dash_text_cont_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#8A231f20"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView11"
                style="@style/MyTextViewBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Groups"
                android:textColor="#8A231F20" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>