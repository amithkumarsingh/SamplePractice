<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.vam.whitecoats.viewmodel.WebViewViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WebViewActivity"
        android:id="@+id/web_content_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/web_linear_layout">

        <WebView
            android:id="@+id/webView_Url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loadUrl="@{viewModel.webViewUrl}"/>
        </LinearLayout>



        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallClipRotatePulseIndicator"
            android:id="@+id/aviInUrl"
            app:indicatorColor="@color/app_green"
            android:layout_centerInParent="true"
            app:customVisibility="@{viewModel.isLoaderVisible}"
            />


    </RelativeLayout>
</layout>