<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.vam.whitecoats.viewmodel.FeedCategoriesViewModel"/>

        <variable
            name="adapter"
            type="com.vam.whitecoats.ui.adapters.FeedsCategoryDistributionAdapter"/>
    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/explore_swipe_refresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activities.SubCategoriesListActivity"
            android:background="#E1E1E1">

          <TextView
              android:layout_width="296dp"
              android:layout_height="25dp"
              android:background="@drawable/search_categories_distribution_bg"
              android:layout_centerHorizontal="true"
              android:id="@+id/search_text_view"
              android:drawableLeft="@drawable/ic_search_grey"
              android:drawablePadding="8dp"
              android:paddingLeft="8dp"
              android:hint="Search COVID-19"
              android:gravity="center_vertical"
              android:layout_marginBottom="8dp"
              android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_subCategories_list"
                app:adapter="@{adapter}"
                android:layout_below="@+id/search_text_view"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="@string/no_data_available"
                app:customVisibility="@{viewModel.isEmptyMsgVisible}"
                android:gravity="center_horizontal"
                android:visibility="gone">
            </TextView>
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallClipRotatePulseIndicator"
                android:id="@+id/aviInExplore"
                app:indicatorColor="@color/app_green"
                app:customVisibility="@{viewModel.isLoaderVisible}"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>
