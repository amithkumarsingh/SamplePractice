<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendations_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80ffffff"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <FrameLayout
        android:id="@+id/attachmenticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recommendations_list_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image_bg" />

        <ImageView
            android:id="@+id/attachment_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/default_image_bg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/attachment_video_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/attachment_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_playvideo"/>
    </FrameLayout>

    <TextView
        android:id="@+id/recommendations_list_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/attachmenticon"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:text="Title of the article"
        android:textColor="@color/app_green"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recommendations_list_blurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommendations_list_tile"
        android:layout_toRightOf="@+id/attachmenticon"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="Blurb of te article"
        android:textColor="#8A231f20"
        android:textSize="14sp" />
</RelativeLayout>
