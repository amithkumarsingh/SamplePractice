<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/re_notify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/block"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/caseroom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/caseroom_time"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="Caseroom123"
            android:textColor="#DE000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/caseroom_time"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp"
            android:text="1hr"
            android:textColor="#54000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/caseroom_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caseroom_title"
            android:text="Pediatrics,Dermatology"
            android:textColor="#54000000" />

        <TextView
            android:id="@+id/caseroom_view_case_summary"
            style="@style/MyTextViewTitleLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caseroom_specialty"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/str_caseroom_summary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notify_caseroom_reject_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caseroom_specialty"
            android:layout_toLeftOf="@+id/notify_caseroom_accept_ig"
            android:src="@drawable/ic_cross_reject" />

        <ImageView
            android:id="@+id/notify_caseroom_accept_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caseroom_specialty"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_check_accept" />

        <TextView
            android:id="@+id/createdby"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caseroom_view_case_summary"
            android:layout_marginTop="20dp"
            android:text="@string/str_created_by"
            android:visibility="gone" />


        <com.vam.whitecoats.ui.customviews.RoundedImageView
            android:id="@+id/caseroom_admin_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/createdby"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/default_profilepic" />

        <TextView
            android:id="@+id/caseroom_admin_name"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createdby"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/caseroom_admin_image"
            android:text="Dr. Sunita Kumar"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/caseroom_admin_speciality"
            style="@style/MyTextViewBody3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caseroom_admin_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/caseroom_admin_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Pediatrics"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
