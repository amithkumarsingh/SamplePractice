<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/linear_connects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/network_text_cont_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/app_green"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_connects"
                style="@style/MyTextViewBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connects"
                android:textColor="#8A231F20" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#1A231f20" />

        <LinearLayout
            android:id="@+id/btn_invite_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/dash_text_coserooms_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_email_invite"
                android:padding="5dp" />

            <TextView
                android:id="@+id/btn_intite"
                style="@style/MyTextViewBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/invite_to_whitecoats"
                android:textColor="#8A231F20" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>