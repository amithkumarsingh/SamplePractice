<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#80ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_group_item_layout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       >

    <com.vam.whitecoats.ui.customviews.RoundedImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/default_profilepic"
        android:id="@+id/profilepic"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_item_layout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            style="@style/MyTextViewBody1"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/speciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:ellipsize="end"
            android:maxLines="2"
            style="@style/MyTextViewBody3"/>

    </LinearLayout>
    <CheckBox
        android:visibility="visible"
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginRight="16dp"/>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>
