<layout>
    <data>
        <variable
            name="viewModel"
            type="com.vam.whitecoats.viewmodel.SpecialityTabViewModel"/>

        <variable
            name="adapter"
            type="com.vam.whitecoats.ui.adapters.SpecialityTabAdapter"/>
    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/explore_swipe_refresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/speciality_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter="@{adapter}"
            app:customVisibility="@{viewModel.isListVisible}"
            tools:context="com.vam.whitecoats.ui.activities.FeedNotificationFragment"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="@string/no_data_available"
            app:customVisibility="@{viewModel.isEmptyMsgVisible}"
            android:gravity="center_horizontal">
        </TextView>
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallClipRotatePulseIndicator"
            android:id="@+id/aviInNotifications"
            app:indicatorColor="@color/app_green"
            app:customVisibility="@{viewModel.isLoaderVisible}"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>