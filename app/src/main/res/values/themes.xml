        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textCursorDrawable">@drawable/green_cursor</item>
    </style>
    <style name="MyTextViewErrorStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/red_error_message</item>
